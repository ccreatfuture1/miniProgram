<view class="tab">
  <view class="tab-item {{tab==0?'active':''}}" bindtap="changeItem" data-item="0">全部订单</view>
  <view class="tab-item {{tab==1?'active':''}}" bindtap="changeItem" data-item="1">待付款</view>
  <view class="tab-item {{tab==2?'active':''}}" bindtap="changeItem" data-item="2">已付款</view>
</view>
<!-- 标签页内容区 -->
<view class="content">
  <!--current：当前滑块显示页面索引号； bindchange：滑块滑动时监听函数  -->
  <swiper current="{{item}}" bindchange="changeTab">
    <swiper-item>
      <include  src="all.wxml" />
    </swiper-item>
    <swiper-item>
      <include src="obligation.wxml" />
    </swiper-item>
    <swiper-item>
      <include src="paid.wxml" />
    </swiper-item>
  </swiper>
</view>
