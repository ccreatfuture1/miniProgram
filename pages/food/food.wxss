

.search{
  position: relative;
  width: 660rpx;
  height: 100%;
  margin-left: 40rpx;
  margin-top: 20rpx;
  text-align: center;
 }
 .search input{
  border:1px solid #ccc;
  border-radius: 20rpx;
  background-color: #e5e5e5;
  height: 30px;
 }
 .icons{
  position: absolute;
  left: 20rpx;
  top:10rpx;
 }
 .lists{
  text-align: center;
  margin-top: 20px;
  color: rgb(230, 124, 25);
 }

 .hotSearch,.searchHistory{
   margin-top: 30rpx;
   width: 660rpx;
   height: 100%;
   position: relative;
   
 }
 .hotSearch .hotSearchItems,.searchHistoryItems{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
 }
 .hotSearch .hotSearchItems view,.searchHistory .searchHistoryItems view{
   font-size: 8pt;
   text-align: center;
   flex: 1;
   min-width: 150rpx; 
   height: 45rpx;
   margin-left: 40rpx;
   margin-top: 10rpx;
   border-radius: 12rpx;
   border: 1px solid rgba(217,217,217, 0.2);
   background-color: #fafafa;
 }
 .recommendItems{
   width: 100%;
   height: 100%;
   position: relative;
   margin-top: 40rpx;
   flex: 1;
 }

 .title{
  line-height: 80rpx;
  font-size: 10pt;
 text-align: start;
margin-left: -600rpx;
 color: #7c7c7c;
}
.headline{
  width: 430rpx;
  height: 100%;
}
.content{
  width: 430rpx;
  height: 70rpx;
  text-overflow: ellipsis;
  word-wrap: break-word;
  font-size: 9pt;
}

.recommendImg image{
  width: 160rpx;
  height: 160rpx;
  border: 1px solid rgba(217,217,217, 0.2);
  border-radius: 15rpx;
  position: absolute;
  right: 20rpx;
  top:-5rpx;
}
 

.line{
  
  background: rgb(243, 245, 240);
  width: 100%;
  height: 3rpx;
  margin-top: 10rpx;
}

 .match_doctor{
   margin-top: 50rpx;
   width: 760rpx;
   height: 340rpx;
   font-size: 9pt;
   display: flex;
   flex-direction: column;
   text-align: center;
 }
 .match_doctor view{
   width: 100%;
   height: 100%;
   position: relative;
   display: flex;
   flex: 1;
   border: 1px solid #eeeeee;
 }

 .match_doctor view view{
  flex-direction: row;
  flex: 1;
  width: 100%;
  height: 100%;
  position: relative;
  color: #808080;
 }
 .match_doctor view view text{
   display: inline-block;
   width: 100%;
   height: 100%;
   top: 20rpx;
   position: absolute;
 }
 .department{
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction:column;
}
.department view{
  flex: 1;
  width: 100%;
  height: 100%;
  position:relative ;
  border: 1px solid gray;
  font-size: 10pt;
}
.department image{
  width: 60rpx;
  height: 60rpx;
  margin-left: 64rpx;
  margin-top: 50rpx;
     
}

.department  .icon_arrow{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top:18rpx;
  right: 20rpx;
}
.department text{
  display: inline-block;
  width: 450rpx;
  height: 30rpx;
  text-align: left;
 
}
.department  .department_name{
  position: absolute;
  top:50rpx;
  left: 150rpx;
  color:black;
}
.department  .department_items{
  position: absolute;
  font-size: 9pt;
  color: #868686;
  top:90rpx;
  left: 150rpx;
}
