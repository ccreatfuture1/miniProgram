/* pages/news/news.wxss */
.content-main{
  display: flex;
  height: 170rpx;
  width: 100%;
}
.content-main >view{
  flex: 1;
}
.content-main >view >image{
 width:100rpx;
 height: 100rpx;
 margin-left: 50rpx;
 margin-top:10rpx;
 border-radius: 100%;
}
.content-main >view >text{
 display: block;
 font-size: 9pt;
 text-align: center;
}
.content-main >view >text:last-child{
  font-size: 7pt;
}
/*为你推荐*/
.recommend{
  width: 95%;
  height:auto;
  margin: 10rpx auto;
  text-align: center;
  border: 2rpx solid #ccc;
  background-color: rgb(238, 242, 247);
}
.recommend >text{
  border-bottom: 2rpx solid #eee;
}
.detail{
  width: 100%;
  height: 220rpx;
  border: 2rpx solid #ccc;
  text-align: left;
  margin: 5rpx auto;
}
.detail >text{
  font-size: 9pt;
  display: block;
 
}
.detail >text:first-child{
  font-size: 10pt;
  font-weight: bold;
  display: block;
  width: 446rpx;
  background-color:#e3e5e8;
}

.detail >text:last-child{
   text-align: center;
   font-size: 10pt;
}
.detail >image{
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  border:2rpx solid red;
  margin-left: 500rpx;
  margin-top:-130rpx;
}
.price{
  color: red;
  font-weight: bold;
}