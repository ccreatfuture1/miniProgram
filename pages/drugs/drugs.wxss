
.search{
  position: relative;
  width: 660rpx;
  margin-left: 40rpx;
  margin-top: 20rpx;
  text-align: center;
 }
 .search input{
  border:1px solid #ccc;
  border-radius: 20rpx;
  background-color: #e5e5e5;
  height: 30px;
 }
 .icons{
  position: absolute;
  left: 20rpx;
  top:10rpx;
 }
 .lists{
  text-align: center;
  margin-top: 20px;
  color: rgb(230, 124, 25);
 }
 .match_doctor{
   margin-top: 50rpx;
   width: 760rpx;
   height: 340rpx;
   font-size: 9pt;
   display: flex;
   flex-direction: column;
   text-align: center;
 }
 .match_doctor view{
   width: 100%;
   height: 100%;
   position: relative;
   display: flex;
   flex: 1;
   border: 1px solid #eeeeee;
 }
 .title{
   line-height: 80rpx;
   font-size: 10pt;
  text-align: left;
  color: #7c7c7c;
 }
 .match_doctor view view{
  flex-direction: row;
  flex: 1;
  width: 100%;
  height: 100%;
  position: relative;
  color: #808080;
 }
 .match_doctor view view text{
   display: inline-block;
   width: 100%;
   height: 100%;
   top: 20rpx;
   position: absolute;
 }
 .department{
  width: 750rpx;
  height: 670rpx;
  display: flex;
  flex-direction:column;
}
.department view{
  flex: 1;
  width: 100%;
  height: 100%;
  position:relative ;
  border: 1px solid gray;
  font-size: 10pt;
}
.department image{
  width: 60rpx;
  height: 60rpx;
  margin-left: 64rpx;
  margin-top: 67rpx;
     
}

.department  .icon_arrow{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top:18rpx;
  right: 20rpx;
}
.department text{
  display: inline-block;
  width: 450rpx;
  height: 30rpx;
  text-align: left;
 
}
.department  .department_name{
  position: absolute;
  top:50rpx;
  left: 150rpx;
  color:black;
}
.department  .department_items{
  position: absolute;
  font-size: 9pt;
  color: #868686;
  top:90rpx;
  left: 150rpx;
}
